generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String
  username          String  @unique
  email             String
  hashedPassword    String  @unique
  isVerified        Boolean @default(false)
  verificationToken String?

  @@map("users")
}
